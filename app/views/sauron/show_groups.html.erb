<div class="container well">
    <div class="row">
        <h2>Filtrado de grupos</h2>
        <div class="col-lg-9">
            <input type="search" class="form-control" id="input-search" placeholder="Â¿Que buscas?" >
        </div>
        <div class="col-md-3">
            <a href="#" class="btn btn-danger btn-block" data-toggle="modal" data-target="#bloqueados"><i class="fa fa-minus-circle"></i> Usuarios bloqueados</a>
        </div>
        <hr>
        <hr>
        <div class="searchable-container">
            <% @groups.each do |user| %>
                <div class="items col-xs-12 col-sm-6 col-md-6 col-lg-6 clearfix">
                    <div class="info-block block-info clearfix">
                        <div class="square-box pull-left">
                            <span class="fa fa-user fa-5x"></span>
                        </div>
                        <h5>ID: <%= user.invitationHash %></h5>
                        <h4>Jefe: <%= user.name %></h4>
                        <p>Empleados: <span class="label label-success"><%= user.employees.size %> <i class="fa fa-users"></i></span></p>
                        <span>Email: <%= user.email %></span><br>
                        <a href="<%= sauron_group_path(user.id) %>" class="btn btn-warning btn-xs"><i class="fa fa-eye"></i> Ver equipo</a>
                        <a href="#" class="btn btn-info btn-xs"><i class="fa fa-support"></i> Enviar mensaje al grupo</a>
                        <a href="<%= sauron_group_block_path(user.id) %>" class="btn btn-danger btn-xs"><i class="fa fa-minus-circle"></i> Bloquear grupo</a>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</div>
<div class="modal fade" id="bloqueados" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Usuarios bloqueados</h4>
            </div>
            <div class="modal-body">
                <% @groups_blocks.each do |user| %>
                <div class="items col-xs-12 col-sm-12 col-md-12 col-lg-12 clearfix">
                    <div class="info-block block-info clearfix">
                        <div class="square-box pull-left">
                            <span class="fa fa-user fa-5x"></span>
                        </div>
                        <h5>ID: <%= user.invitationHash %></h5>
                        <h4>Jefe: <%= user.name %></h4>
                        <p>Empleados: <span class="label label-success"><%= user.employees.size %> <i class="fa fa-users"></i></span></p>
                        <span>Email: <%= user.email %></span><br>
                        <a href="<%= sauron_group_path(user.id) %>" class="btn btn-warning btn-xs"><i class="fa fa-eye"></i> Ver equipo</a>
                        <a href="#" class="btn btn-info btn-xs"><i class="fa fa-support"></i> Enviar mensaje al grupo</a>
                        <a href="<%= sauron_group_block_path(user.id) %>" class="btn btn-danger btn-xs"><i class="fa fa-minus-circle"></i> Bloquear grupo</a>
                    </div>
                </div>
                <% end %>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>