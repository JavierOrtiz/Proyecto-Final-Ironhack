<div class="row">
    <div class="col-md-12">
        <div class="well profile">
            <div class="col-sm-12">
                <div class="col-xs-12 col-sm-8">
                    <h2><%= @user.name %></h2>
                    <p><strong>Puesto: </strong> <% if @user.boss %> Trabaja para <%= @user.boss.name %> <% end %> </p>
                    <p><strong>Contacto: </strong> <%= @user.email %> </p>
                    <p><strong>Skills: </strong>
                        <span class="tags">html5</span> 
                        <span class="tags">css3</span>
                        <span class="tags">jquery</span>
                        <span class="tags">bootstrap3</span>
                    </p>
                </div>             
                <div class="col-xs-12 col-sm-4 text-center">
                    <figure>
                        <img src="<%= @user.photo %>" alt="" class="img-circle img-responsive">
                        <figcaption class="ratings">
                            <p>Puntuacion
                                <a href="#">
                                    <span class="fa fa-star"></span>
                                </a>
                                <a href="#">
                                    <span class="fa fa-star"></span>
                                </a>
                                <a href="#">
                                    <span class="fa fa-star"></span>
                                </a>
                                <a href="#">
                                    <span class="fa fa-star"></span>
                                </a>
                                <a href="#">
                                    <span class="fa fa-star-o"></span>
                                </a> 
                            </p>
                        </figcaption>
                    </figure>
                </div>
            </div>            
            <div class="col-xs-12 divider text-center">
                <div class="col-xs-12 col-sm-4 emphasis">
                    <h2><strong> 20,7K </strong></h2>                    
                    <p><small>Ventas</small></p>
                    <button class="btn btn-success btn-block"><span class="fa fa-plus-circle"></span> Informe </button>
                </div>
                <div class="col-xs-12 col-sm-4 emphasis">
                    <h2><strong><%= @user.employees.size %></strong></h2>                    
                    <p><small>Empleados</small></p>
                    <button class="btn btn-info btn-block"><span class="fa fa-user"></span> Estadisticas </button>
                </div>
                <div class="col-xs-12 col-sm-4 emphasis">
                    <div class="btn-group dropup btn-block">
                        <button type="button" class="btn btn-primary"><span class="fa fa-gear"></span> Opciones </button>
                        <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                            <span class="caret"></span>
                            <span class="sr-only">Toggle Dropdown</span>
                        </button>
                        <ul class="dropdown-menu text-left" role="menu">
                            <li><a href="#"><span class="fa fa-envelope pull-right"></span> Send an email </a></li>
                            <li><a href="#"><span class="fa fa-list pull-right"></span> Add or remove from a list  </a></li>
                            <li class="divider"></li>
                            <li><a href="#"><span class="fa fa-warning pull-right"></span>Report this user for spam</a></li>
                            <li class="divider"></li>
                            <li><a href="#" class="btn disabled" role="button"> Unfollow </a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>                 
    </div>
</div>