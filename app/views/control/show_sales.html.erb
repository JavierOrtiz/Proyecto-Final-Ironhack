

<div class="col-md-9">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title"><i class="fa fa-money fa-fw"></i> <%= t('Panel_Ventas') %></h3>
        </div>
        <div class="panel-body">
            <div class="table-responsive">
                <h1><%= t('Mis_ventas') %></h1>
                <table class="table table-bordered table-hover table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th><%= t('Creada') %></th>
                            <th><%= t('Procesado') %></th>
                            <th><%= t('Estado') %></th>
                            <th><%= t('Cantidad') %></th>
                            <th><%= t('Evento') %></th>
                            <th><%= t('Vendedor') %></th>
                            <th><%= t('Comprador') %></th>
                            <th><%= t('Commission') %></th>
                            <th><%= t('Total') %></th>
                            <th><%= t('Acciones') %></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @sales.each do |sale| %>
                        <% if sale.status == "Pagado" %>
                        <tr class="success">
                            <% else %>
                        <tr class="warning">
                            <% end %>
                                <td><%= sale.id %></td>
                                <td><%= sale.sold %></td>
                                <td><%= sale.processed %></td>
                                <td><%= sale.status %></td>
                                <td><%= sale.cuantity %></td>
                                <td><%= sale.event.title %></td>    
                                <td><%= sale.user.name %></td>    
                                <td><%= sale.buyer %></td>
                                <td><%= sale.cuantity * sale.event.commission.to_f %> <i class="fa fa-eur"></i></td>
                                <td><%= sale.total %> <i class="fa fa-eur"></i></td>
                                <% if sale.status != "Pagado" %>
                            <td><a href="<%= control_sale_process_path(sale.id) %>" class="btn btn-info btn-xs"><i class="fa fa-spinner"></i> <%= t('Procesar') %></a></td>
                                <% else %>
                            <td><a href="<%= control_sale_path(sale.id) %>" class="btn btn-default btn-xs"><i class="fa fa-eye"></i> <%= t('Ver_Venta') %></a></td>
                                <% end %>

                            </tr>
                        <% end %>
                    </tbody>
                </table>
                <hr>
                <h1><%= t('Ventas_equipo') %></h1>
                <table class="table table-bordered table-hover table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th><%= t('Creada') %></th>
                            <th><%= t('Procesado') %></th>
                            <th><%= t('Estado') %></th>
                            <th><%= t('Cantidad') %></th>
                            <th><%= t('Evento') %></th>
                            <th><%= t('Vendedor') %></th>
                            <th><%= t('Comprador') %></th>
                            <th><%= t('Commission') %></th>
                            <th><%= t('Total') %></th>
                            <th><%= t('Acciones') %></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @team_sales.each do |sale| %>
                        <% if sale.status == "Pagado" %>
                        <tr class="success">
                            <% else %>
                        <tr class="warning">
                            <% end %>
                            <td><%= sale.id %></td>
                            <td><%= sale.sold %></td>
                            <td><%= sale.processed %></td>
                            <td><%= sale.status %></td>
                            <td><%= sale.cuantity %></td>
                            <td><%= sale.event.title %></td>    
                            <td><%= sale.user.name %></td>    
                            <td><%= sale.buyer %></td>
                            <td><%= sale.cuantity * sale.event.commission.to_f %> <i class="fa fa-eur"></i></td>
                            <td><%= sale.total %> <i class="fa fa-eur"></i></td>
                            <% if sale.status != "Pagado" %>
                            <td><a href="<%= control_sale_process_path(sale.id) %>" class="btn btn-info btn-xs"><i class="fa fa-spinner"></i> <%= t('Procesar') %></a></td>
                            <% else %>
                            <td><a href="<%= control_sale_path(sale.id) %>" class="btn btn-default btn-xs"><i class="fa fa-eye"></i> <%= t('Ver_Venta') %></a></td>
                            <% end %>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
            <div class="text-right">
                <a href="#"><%= t('Ver_todas') %> <i class="fa fa-arrow-circle-right"></i></a>
            </div>
        </div>
    </div>
</div>
<div class="col-md-3">
    <a href="<%= new_control_sale_path %>" class="btn btn-success btn-block"><i class="fa fa-credit-card"></i> <%= t('Nueva_Venta') %></a>
    <a href="#" class="btn btn-warning btn-block"><i class="fa fa-eye"></i> <%= t('Revisar_ventas') %></a>
    <h1><%= @my_total[1]  %> <small><%= t('Entradas_vendidas') %></small></h1>
    <h1><%= @my_total[0] %> <small><%= t('Moneda') %> <%= t('Obtenidos') %></small></h1>
    <hr>
    <h1><%= @my_total[1] +@total_entradas  %> <small><%= t('Vendidas_equipo') %></small></h1>
    <h1><%= @my_total[0] + @total_team %> <small><%= t('Moneda') %> <%= t('Obtenidos_equipo') %></small></h1>
    <hr>
</div>