<link href='http://fonts.googleapis.com/css?family=Fredoka+One' rel='stylesheet' type='text/css'>
<% if @events.empty? %>
<div class="alert alert-danger alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <strong>Error!</strong> No tienes eventos asignados <% if !current_user.boss %>, empieza<span class=""><a href="#" class="btn btn-success btn-xs">creando tu primer evento</a></span><% end %>
</div>
<% end %>
<% if !current_user.boss %><span class=""><a href="#" class="btn btn-success">CREAR EVENTO</a></span><% end %>
 <hr>
  <% @events.each do |event| %>
   <div class="col-md-3">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title"><%= event.title %> <a href="#" class="btn btn-success btn-xs pull-right">Ver evento</a></h3>
        </div>
        <div class="panel-body">
            <img src="<%= event.flyer %>" class="thumbnail" alt="<%= event.title %>" width="100%" height="auto">
        </div>
    </div>
</div>
<% end %>