<div class="container">

    <h1><%= t('Nueva_Venta') %> <small><%= t('Para') %>: <%= current_user.name %></small></h1>
    <div class="col-md-12">
        <%= form_for [:control, @sale] do |f| %>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <%= f.label :Comprador %>
                    <%= f.text_field :buyer, class: 'form-control' %>
                </div>
                <div class="form-group">
                    <%= f.label :Telefono %>
                    <%= f.text_field :phone, class: 'form-control' %>
                </div>
                <div class="form-group">
                    <%= f.label :Email %>
                    <%= f.text_field :email, class: 'form-control' %>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <%= f.label :Destinatario %>
                    <%= select_tag(:event_id, options_for_select(@array_events), class: 'form-control') %>
                </div>
                <div class="form-group">
                    <%= f.label :Cantidad %>
                    <%= f.text_field :cuantity, class: 'form-control' %>
                </div>
                <div class="form-group">
                    <%= f.label :Estado %>
                    <select class="form-control" name="status" id="status">
                        <option value="Reservado">Reservado</option>
                        <option value="Pagado">Pagado</option>
                    </select>
                </div>
            </div>               
        </div>

        <%= f.button :Enviar, class: 'btn btn-success btn-block' %>
        <% end %>
</div>
</div>