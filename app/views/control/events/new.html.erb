<div class="row">
        <% if @event.errors.any? %>
        <% @event.errors.full_messages.each do |error_msg| %>
        <div class="alert alert-warning alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button><strong>Error:</strong><%= error_msg %></div>
        <% end %>
        <% end %>
    <h1>Crear nuevo proyecto <span class="pull-right"><a href="<%= control_events_path %>" class="btn btn-primary btn-xs" role="button">Volver</a></span></h1>
    <div class="col-md-6">
        <%= form_for [:control, @event] do |f| %>
        
        <div class="form-group">
        <%= f.label :Locate %>
        <%= f.text_field :locate, class: 'form-control' %>
        </div>
        
        <div class="form-group">
        <%= f.label :House %>
        <%= f.text_field :house, class: 'form-control' %>
        </div>
        <div class="form-group">
        <%= f.label :Capacity %>
        <%= f.text_field :capacity, class: 'form-control' %>
            </div>
        <div class="form-group">
        <%= f.label :Commission %>
        <%= f.text_field :commission, class: 'form-control' %>
            </div>
    </div>
    <div class="col-md-6">
        
        <div class="form-group">
        <%= f.label :date %>
        <%= f.date_field :date, class: 'form-control' %>
        </div>
        <div class="form-group">
            <%= f.label :title %>
            <%= f.text_field :title, class: 'form-control' %>
        </div>
        <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, class: 'form-control' %>
            </div>
        
        <%= f.submit 'Crear entry', class:'btn btn-success btn-block' %>
        			
    </div>
        <% end %>
    </div>
</div>