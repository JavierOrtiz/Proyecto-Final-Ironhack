<div class="row">
        <% if @event.errors.any? %>
        <% @event.errors.full_messages.each do |error_msg| %>
        <div class="alert alert-warning alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button><strong>Error:</strong><%= error_msg %></div>
        <% end %>
        <% end %>
    <h1>Crear nuevo evento <span class="pull-right"><a href="<%= control_events_path %>" class="btn btn-primary btn-xs" role="button">Volver</a></span></h1>
    <div class="col-md-6">
        <%= form_for [:control, @event] do |f| %>
        
        <div class="form-group">
            <%= f.label :Ubicacion %>
            <%= f.text_field :locate, class: 'form-control' %>
        </div>
        
        <div class="form-group">
            <%= f.label :Discoteca %>
            <%= f.text_field :house, class: 'form-control' %>
        </div>
        <div class="form-group">
            <%= f.label :Cuota %>
            <div class="input-group">
                <%= f.text_field :capacity, class: 'form-control', id: 'exampleInputAmount' %>
                <div class="input-group-addon">Entradas</div>
            </div>           
        </div>
        <div class="form-group">
            <div class="col-md-6">
                <%= f.label :Comision %>
                <div class="input-group">
                    <%= f.text_field :commission, class: 'form-control', id: 'exampleInputAmount' %>
                    <div class="input-group-addon">€</div>
                </div>
            </div>
            <div class="col-md-6">
                <%= f.label :Precio %>
                <div class="input-group">
                    <div class="input-group-addon">Unidad</div>
                        <%= f.text_field :price, class: 'form-control', id: 'exampleInputAmount' %>
                    <div class="input-group-addon">€</div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        
        <div class="form-group">
            <%= f.label :Fecha %>
            <%= f.date_field :date, class: 'form-control' %>
        </div>
        <div class="form-group">
            <%= f.label :Fiesta %>
            <%= f.text_field :title, class: 'form-control' %>
        </div>
        <div class="form-group">
            <%= f.label :Informacion %>
            <%= f.text_area :description, class: 'form-control' %>
        </div>
        <div class="form-group">
            <%= f.label :Usuario %>
            <input class="form-control" type="text"  value="<%= current_user.id %>" readonly>
        </div>
        
        
        			
    </div>
    <%= f.submit 'Crear evento', class:'btn btn-success pull-right btn-lg' %>
        <% end %>
    </div>
</div>